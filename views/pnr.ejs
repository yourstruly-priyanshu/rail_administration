    <a href="/maintenance"> Maintainence</a>
  </nav>

  <section>
    <h2>Check PNR Status</h2>
    <form onsubmit="checkPNRStatus(event)">
      <label for="pnrNumber">Enter PNR Number:</label>
      <input type="text" id="pnrNumber" name="pnrNumber" required>

      <button type="submit">Check Status</button>
    </form>

    <div class="result" id="statusResult"></div>
  </section>
  <script>
    function refreshPage() {
      location.reload();
    }

    function checkPNRStatus(event) {
      event.preventDefault();
      const pnrNumber = document.getElementById("pnrNumber").value;
      const statusResult = document.getElementById("statusResult");

      // Perform PNR status check logic here
      // For demonstration purposes, let's assume the PNR is always valid
      statusResult.innerHTML = <p>PNR ${pnrNumber} is confirmed. Have a safe journey!</p>;
    }
  </script>

</body>

</html>