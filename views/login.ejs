<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="index.ejs" href="/views/index.ejs">
  <link rel="login.ejs" href="/views/login.ejs">
  <style>
    h2 {
      text-align: center;
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    header {
      background-color: #333333;
      color: white;
      text-align: center;
      padding: 10px;
    }

    nav  {
      background-color: #514caf;
      color: white;
      text-align: center;
      padding: 10px;
    }
    nav a {
      margin: 0 10px;
      text-decoration: none;
      color: white;
    }

    .form-container {
      max-width: 400px;
      margin: auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-bottom: 8px;
    }

    input {
      margin-bottom: 16px;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      background-color: #6d4caf;
      color: white;
      padding: 10px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
    }

    .challenge {
      margin-bottom: 16px;
    }

    .challenge label {
      margin-bottom: 8px;
    }

    .challenge-word {
      font-weight: bold;
      font-size: 1.2em;
      color: #6d4caf; /* Match the button color */
    }
  </style>
</head>


<body>

  <header>
    <h1>Rail Administration</h1>
  </header>

  <nav>
    <a href="/index">Book a Ticket</a> |
    <a href="/tatkal">Book Tatkal</a>  |
    <a href="/pnr">PNR Status</a> |
    <a href="/login">Login</a> |
    <a href="/register">Register</a> |
    <a href="/complaintrefund">Complaint and Refund</a> |
    <a href="/maintenance"> Maintainence</a>
  </nav>

  <section>
    <h2>Login page</h2>
  </section>

  <div class="form-container">
    <form onsubmit="updateChallengeWord();">
      <label for="userId">User ID:</label>
      <input type="text" id="userId" name="userId" required>

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>

      <div class="challenge">
        <label>Type the word:</label>
        <span class="challenge-word" id="randomWord"></span>
        <input type="text" id="userWord" name="userWord" required>
      </div>

      <button type="submit">Login</button>
    </form>
  </div>
  <script>
    
    // Initial generation of the random word
    updateChallengeWord();

    // Function to update the challenge word
    function updateChallengeWord() {
      document.getElementById("randomWord").innerText = getRandomWord();
    }

    function getRandomWord() {
      const words = ["apple", "banana", "chocolate", "elephant", "guitar", "pineapple", "sunflower"];
      return words[Math.floor(Math.random() * words.length)];
    }
  </script>

</body>

</html>