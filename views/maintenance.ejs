<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Maintenance Record</title>
  <style>
    h2 {
      text-align: center;
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    header {
      background-color: #333333;
      color: white;
      text-align: center;
      padding: 10px;
    }

    nav {
      background-color: #514caf;
      color: white;
      text-align: center;
      padding: 10px;
    }

    nav a {
      margin: 0 10px;
      text-decoration: none;
      color: white;
    }

    .form-container {
      max-width: 400px;
      margin: auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-bottom: 8px;
    }

    input,
    textarea {
      margin-bottom: 16px;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      background-color: #6d4caf;
      color: white;
      padding: 10px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
    }
  </style>
</head>

<body>

  <header>
    <h1>Rail Administration</h1>
  </header>

  <nav>
    <a href="/index">Book a Ticket</a> |
    <a href="/tatkal">Book Tatkal</a>  |
    <a href="/pnr">PNR Status</a> |
    <a href="/login">Login</a> |
    <a href="/register">Register</a> |
    <a href="/complaintrefund">Complaint and Refund</a> |
    <a href="/maintenance"> Maintainence</a>
    
  </nav>

  <section>
    <h2>Maintenance Record</h2>
    <div class="form-container">
      <form id="maintenanceForm">
        <label for="maintenanceDate">Maintenance Date:</label>
        <input type="date" id="maintenanceDate" name="maintenanceDate" required>

        <label for="numberOfTimes">Number of Times:</label>
        <input type="number" id="numberOfTimes" name="numberOfTimes" required>

        <button type="button" onclick="submitMaintenanceRecord()">Submit Maintenance Record</button>
      </form>
    </div>
  </section>

  <script>
    async function submitMaintenanceRecord() {
      const maintenanceDate = document.getElementById("maintenanceDate").value;
      const numberOfTimes = document.getElementById("numberOfTimes").value;
  
      try {
        const response = await fetch('/submitMaintenance', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ maintenanceDate, numberOfTimes }),
        });
  
        if (response.ok) {
          alert('Maintenance Record Submitted Successfully');
        } else {
          alert('Failed to submit Maintenance Record');
        }
      } catch (error) {
        console.error('Error submitting Maintenance Record:', error);
        alert('Error submitting Maintenance Record');
      }
    }
  </script>
  

</body>

</html>
